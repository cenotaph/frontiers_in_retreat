.row
  .small-12.columns
    %h2 Users
.row
  .small-12.columns
    %table
      %thead
        %th ID
        %th Username 
        %th Location
        %th Email
        %th Approved?
        %th Actions
      %tbody
        - @users.each do |user|
          %tr
            %td= user.id.to_s
            %td= user.username
            %td= user.site.try(:name)
            %td= user.email
            %td= user.approved == true ? 'yes' : 'no'
            %td.actions
              = link_to 'Edit', edit_admin_user_path(user), :class => [:button, :round, :tiny]
              = link_to 'Delete', [:admin, user], :method => :delete, :class => [:button, :round, :tiny, :alert], :data => {:confirm => 'Are you sure you want to delete this person forever?'}
.row
  .small-12.columns= link_to 'New user', new_admin_user_path, :class => [:button, :round]
          
          