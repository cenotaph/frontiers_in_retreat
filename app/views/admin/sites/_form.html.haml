.row
  .small-12.columns
    = semantic_form_for [:admin, @site], :html => {:multipart => true} do |f|
      .row
        .small-6.columns= f.input :name
      .row
        .small-6.columns= f.input :address, :label => 'Street address'
      .row
        .small-6.columns= f.input :city
      .row
        .small-6.columns= f.input :country
      .row
        .small-6.columns= f.input :description
      .row
        .small-12.columns
          %p Latitude and longitude will be attempted to be filled automatically; leave blank unless you need to edit.
      .row
        .small-6.columns= f.input :latitude
        .small-6.columns= f.input :longitude
      .row
        .small-6.columns= f.input :current
      .row
        .small-6.columns= f.submit 'Save', :class => [:button, :round]
      
          
      