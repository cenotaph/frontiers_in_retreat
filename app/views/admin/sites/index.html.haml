.row
  .small-12.columns
    %h2 Sites / partners
.row
  .small-12.columns= link_to 'New site', new_admin_site_path, :class => [:button, :tiny, :round]
          
              
.row
  .small-12.columns
    %table
      %thead
        %th= sortable_column "ID"
        %th= sortable_column  "Name" 
        %th= sortable_column  "Location"
        %th= sortable_column  "Active?", column: :current
        %th Actions
      %tbody
        - @sites.each do |site|
          %tr
            %td= site.id.to_s
            %td= site.name
            %td= site.full_street_address
            %td= site.current == true ? 'yes' : 'no'
            %td.actions
              = link_to 'Edit', edit_admin_site_path(site), :class => [:button, :round, :tiny]
              = link_to 'Delete', [:admin, site], :method => :delete, :class => [:button, :round, :tiny, :alert], :data => {:confirm => 'Are you sure you want to delete this forever?'}

.row
  .small-12.columns= link_to 'New site', new_admin_site_path, :class => [:button, :round]
          
          