.row
  .small-12.columns
    %h2 Projects
.row
  .small-12.columns= link_to 'New project', new_admin_project_path, :class => [:button, :round]
.row
  .small-12.columns
    %table
      %thead

        %th= sortable_column "Name"
        %th Artists
        %th= sortable_column "When?", column: :when 
        %th Actions
      %tbody
        - @projects.each do |p|
          %tr
            %td= p.name
            %td= p.artists
            %td
              = date_range(p.start_at, p.end_at)
            %td.actions
              = link_to 'Edit', edit_admin_project_path(p), :class => [:button, :round, :tiny]
              = link_to 'Delete', [:admin, p], :method => :delete, :class => [:button, :round, :tiny, :alert], :data => {:confirm => 'Are you sure you want to delete this forever?'}
.row
  .small-12.columns= link_to 'New project', new_admin_project_path, :class => [:button, :round]
          
          