.row
  .small-12.columns
    %h2 Artists
.row
  .small-12.columns= link_to 'New artist', new_admin_artist_path, :class => [:button, :round, :tiny]
          
        
.row
  .small-12.columns
    %table
      %thead
        %th=sortable_column "ID"
        %th=sortable_column "Name", column: :surname
        %th=sortable_column "Visible on site?", column: :visible
        %th Actions
      %tbody
        - @artists.each do |artist|
          %tr
            %td= artist.id.to_s
            %td= artist.name
            %td= artist.visible == true ? 'yes' : 'no'
            %td.actions
              = link_to 'Edit', edit_admin_artist_path(artist), :class => [:button, :round, :tiny]
              = link_to 'Delete', [:admin, artist], :method => :delete, :class => [:button, :round, :tiny, :alert], :data => {:confirm => 'Are you sure you want to delete this forever?'}
.row
  .small-12.columns= paginate @artists
.row
  .small-12.columns= link_to 'New artist', new_admin_artist_path, :class => [:button, :round]
          
          