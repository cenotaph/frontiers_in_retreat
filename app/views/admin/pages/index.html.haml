.row
  .small-12.columns
    %h2 Static page content
.row
  .small-12.columns
    %table
      %thead
        %th ID
        %th Title 
        %th Public?
        %th Actions
      %tbody
        - @pages.each do |page|
          %tr
            %td= page.id.to_s
            %td= page.title
            %td= page.published == true ? 'yes' : 'no'
            %td.actions
              = link_to 'Edit', edit_admin_page_path(page), :class => [:button, :round, :tiny]
              = link_to 'Delete', [:admin, page], :method => :delete, :class => [:button, :round, :tiny, :alert], :data => {:confirm => 'Are you sure you want to delete this forever?'}
.row
  .small-12.columns= link_to 'New page', new_admin_page_path, :class => [:button, :round]
          
          