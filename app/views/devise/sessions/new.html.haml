.row 
  .small-8.columns
    %h2 Sign in
.row
  .small-6.columns
    = devise_error_messages!
= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
  .row
    .small-6.columns
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true
  .row
    .small-6.columns
      = f.label :password
      %br/
      = f.password_field :password, autocomplete: "off"
  - if devise_mapping.rememberable?
    .row
      .small-6.columns
        = f.check_box :remember_me
        = f.label :remember_me
  .row
    .small-6.columns= f.submit "Sign in", class: [:button]
.row
  .small-6.columns= render "devise/shared/links"
